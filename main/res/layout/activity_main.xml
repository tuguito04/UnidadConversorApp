<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Barra de herramientas con el botón de cambio de modo -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="UnidadConversor App"
        android:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:padding="8dp">

        <!-- Botón para cambiar el modo -->
        <Button
            android:id="@+id/buttonToggleMode"
            android:text="Cambiar Modo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Campo para ingresar el nombre -->
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="Autofill,HardcodedText,VisualLintTextFieldSize" />

    <!-- Texto para mostrar el nombre ingresado -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola, por favor ingrese su nombre arriba"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <!-- Teclado numérico con botones -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_marginTop="20dp">

    <!-- Botones numéricos -->
    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        tools:ignore="HardcodedText" />

    </GridLayout>

    <!-- Botón para reiniciar -->
    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <!-- Botones para las conversiones -->
    <Button
        android:id="@+id/buttonConvertLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir longitud"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        tools:ignore="HardcodedText"
        android:enabled="false"/>

    <Button
        android:id="@+id/buttonConvertWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir peso"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        tools:ignore="HardcodedText"
        android:enabled="false"/>

    <Button
        android:id="@+id/buttonConvertTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir temperatura"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        tools:ignore="HardcodedText"
        android:enabled="false"/>


    <!-- Texto para mostrar el resultado -->
    <TextView
        android:id="@+id/textViewNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado aquí"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

</LinearLayout>


